<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chating</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <h3>All Chats</h3>
    <form method="get" action="/chats/new">
        <button>New Chat</button>
    </form>
    <hr>
    <% for(let chat of chats) { %>
        <div class="chat">
            <p>From : <%= chat.from %></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <a href="/chats/<%= chat._id %>/edit">
                    <button type="button">Edit</button>
                </a>
                <form action="/chats/<%= chat._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button>Delete</button>
                </form>
            </div>
            <p>Received by : <%= chat.to %></p>
            <hr>
            <p><%= chat.created_at.toString().split(" ")[4] %></p><br>
            <p><%= chat.created_at.toString().split(" ").slice(0,4).join("-") %></p> <br>
        </div>
        <br><br>
    <% } %>
</body>
</html>

