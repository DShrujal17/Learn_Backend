<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Users</title>

    <style>
        table,th,td {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>ID</th>
            <th>Email</th>
            <th>Username</th>
            <th>Action</th>
        </tr>
        <% for(user of users) { %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.email %></td>
                <td><%= user.username %></td>
                <td>
                    <a href="/user/<%= user.id %>/edit">
                        <button type="button">Edit Username</button>
                    </a>
                    <form action="/user/<%= user.id %>?_method=DELETE" method="POST">
                        <button>Delete</button>
                    </form>
                </td> 
            </tr>
        <% } %>
        <a href="/user/new">
            <button type="button">Add New User</button>
        </a>    
        <br><br>
    </table>
</body>
</html>

